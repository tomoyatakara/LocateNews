<div class="row user">
	<div class="col-md-2">
		<div class="user profile">
			<%= render'articles/list', user: current_user%>
		</div>
	</div>
	<div class="col-md-10">
	    <div class="row">
			<div class="col-md-6">
				<div id="container">
					<div id="slide">
						<div class="new1"></div>
						<div class="new2"></div>
						<div class="new3"></div>
						<div class="new4"></div>
					</div>
				</div>
			</div>
	    </div>
		<div class="row">
			<% @articles.each do |article| %>
				<div class="col-md-4">
					<div class="well">
						<%= link_to article.url do %>
						    <div class="img-box">
						    <img src=<%= article.image %>>
						    </div>
					        <%= article.name %>
							<h3><%= article.title %></h3>
							<p><%= article.text %></p>
						<% end %>
						<div id="favorites_buttons_<%= article.id %>">
	                    <%= render partial: 'favorites/favorite', locals: { article: article} %>
	                    </div>
					</div>
				</div>
			<% end %>
		</div>
    </div>
</div>